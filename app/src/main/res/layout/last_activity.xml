<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/successfulText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/app_color"
        android:textStyle="bold"
        android:text="Congratulations !! \nYour order has been successfully placed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderSummaryText"
        android:layout_width="201dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp"
        android:text="Order Summary"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/successfulText" />

    <TextView
        android:id="@+id/brandName"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:text="Brand : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderSummaryText" />

    <TextView
        android:id="@+id/brandValue"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/brandName"
        app:layout_constraintTop_toBottomOf="@+id/orderSummaryText" />

    <TextView
        android:id="@+id/modelName"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Model : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandName" />

    <TextView
        android:id="@+id/modelValue"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/modelName"
        app:layout_constraintTop_toBottomOf="@+id/brandValue" />

    <TextView
        android:id="@+id/price"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Price : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modelName" />

    <TextView
        android:id="@+id/priceValue"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/modelValue" />

    <TextView
        android:id="@+id/storageName"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Storage : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/storageValue"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/storageName"
        app:layout_constraintTop_toBottomOf="@+id/priceValue" />

    <TextView
        android:id="@+id/color"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Color : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storageValue"/>

    <TextView
        android:id="@+id/colorName"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color"
        app:layout_constraintTop_toBottomOf="@+id/storageValue" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Name : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/color"/>

    <TextView
        android:id="@+id/customerNameValue"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customerName"
        app:layout_constraintTop_toBottomOf="@+id/colorName" />

    <TextView
        android:id="@+id/customerAddress"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Delivery Address : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerName"/>

    <TextView
        android:id="@+id/addressName"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customerAddress"
        app:layout_constraintTop_toBottomOf="@+id/customerNameValue" />

    <TextView
        android:id="@+id/customerPhoneNumber"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Phone Number : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerAddress"/>

    <TextView
        android:id="@+id/customerNumberValue"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customerPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/addressName" />

</androidx.constraintlayout.widget.ConstraintLayout>